function on_message(self, message_id, message, sender)
	if message_id == hash("level1_tree_take") then
		gui.set_enabled(self.tree, true)
	end

	if message_id == hash("level1_metal_take") then
		gui.set_enabled(self.metal, true)
	end
	
end

